<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.ProyectoCafeteria" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.ProyectoCafeteria" parent="Base.Theme.ProyectoCafeteria" />

    <!-- Tema de Splash -->
    <style name="Theme.ProyectoCafeteria.Splash" parent="Theme.SplashScreen">
        <!-- Fondo del splash -->
        <item name="windowSplashScreenBackground">#151515</item>

        <!-- Tu logo para el splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg_splash_defalult</item>

        <!-- Duración mínima del splash (en ms) -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Tema a usar después del splash -->
        <item name="postSplashScreenTheme">@style/Theme.ProyectoCafeteria</item>
    </style>

    //Buscador
    <style name="ShapeAppearance.MyApp.TextInputLayout" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">16dp</item>
    </style>


</resources>